{
  "appId": "com.neonglide.game",
  "appName": "Neon Glide",
  "webDir": "dist",
  "server": {
    "cleartext": true
  },
  "ios": {
    "contentInset": "automatic",
    "scheme": "Neon Glide",
    "backgroundColor": "#000000"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#000000",
      "showSpinner": false,
      "androidSpinnerStyle": "large",
      "iosSpinnerStyle": "small",
      "spinnerColor": "#00ffff"
    },
    "StatusBar": {
      "style": "dark",
      "backgroundColor": "#000000"
    }
  }
}
